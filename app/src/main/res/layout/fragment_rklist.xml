<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_activity_background"
    android:orientation="vertical"
    tools:context="org.mewx.wenku8.fragment.RKListFragment">

    <com.ghkjgod.lightnovel.component.PagerSlidingTabStrip
        android:id="@+id/rklist_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="?attr/colorPrimary"
        app:pstsTabBackground="@drawable/btn_menu_item_boardless"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/rklist_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.mewx.wenku8.fragment.RKListFragment"/>
</LinearLayout>
